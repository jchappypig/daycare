- model_class = Diary
- title = t '.title', :default => model_class.model_name.human.pluralize.titleize
- content_for :title, title
.page-header
  %h1=title
- unless @diaries.blank?
  %table.table.table-striped
    %thead
      %tr
        %th= model_class.human_attribute_name(:id)
        %th= model_class.human_attribute_name(:created_at)
        %th=t '.actions', :default => t('helpers.actions')
    %tbody
      - @diaries.each do |diary|
        %tr
          %td= link_to diary.id, diary_path(diary)
          %td= link_to diary.created_at, diary_path(diary)
          %td
            = link_to t('.edit', :default => t('helpers.links.edit')), edit_diary_path(diary), :class => 'btn btn-mini'
            = link_to t('.destroy',
                        :default => t('helpers.links.destroy')), diary_path(diary),
                        :method => :delete, :data => { :confirm => t('.confirm',
                                                       :default => t('helpers.links.confirm',
                                                       :default => 'Are you sure?')) },
                        :class => 'btn btn-mini btn-danger'

- else
  %p Sorry, no diaries found.

= link_to t('.new', :default => t('helpers.links.new')), new_diary_path, :class => 'btn btn-primary'
