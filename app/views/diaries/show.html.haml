- model_class = Diary
- title = t '.title', :default => model_class.model_name.human.titleize
- content_for :title, title
.page-header
  %h1=title

%p
  %strong= model_class.human_attribute_name(:created_at) + ':'
  %br
  = @diary.created_at

.form-actions
  = link_to t('.back', :default => t('helpers.links.back')), diary_path, :class => 'btn'
  = link_to t('.edit', :default => t('helpers.links.edit')), edit_diary_path(@diary), :class => 'btn'
  = link_to t('.destroy', :default => t('helpers.links.destroy')), diary_path(@diary), :method => 'delete', :data => { :confirm => t('.confirm', :default => t('helpers.links.confirm', :default => 'Are you sure?')) }, :class => 'btn btn-danger'

