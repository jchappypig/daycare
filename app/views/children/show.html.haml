- model_class = Child
- title = t '.title', :default => model_class.model_name.human.titleize
- content_for :title, title
.page-header
  %h1=title

%p
  %strong= model_class.human_attribute_name(:first_name) + ':'
  %br
  = @child.first_name
%p
  %strong= model_class.human_attribute_name(:last_name) + ':'
  %br
  = @child.last_name
%p
  %strong= model_class.human_attribute_name(:dob) + ':'
  %br
  = @child.dob

.form-actions
  = link_to t('.back', :default => t('helpers.links.back')), children_path, :class => 'btn'
  = link_to t('.edit', :default => t('helpers.links.edit')), edit_child_path(@child), :class => 'btn'
  = link_to t('.destroy', :default => t('helpers.links.destroy')), child_path(@child), :method => 'delete', :data => { :confirm => t('.confirm', :default => t('helpers.links.confirm', :default => 'Are you sure?')) }, :class => 'btn btn-danger'
